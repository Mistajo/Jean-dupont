{% extends "themes/base_admin.html.twig" %}

{% block title %}Le blog de Jean Dupont - Admin - Liste des tags{% endblock %}

{% block description %}Le blog de Jean Dupont - Admin - Liste des tags{% endblock %}

{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block dataTables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>

    <script>
      $(document).ready( function () {
          $('#table').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json',
            },
          });
      } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des tags</h1>

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="" class="btn btn-primary shadow">Nouveau tag</a>
    </div>

    <div class="table-responsive">
            <table id="table" class="table table-striped table-hover text-center table-bordered">
                <thead class="table-dark text-white">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Slug</th>
                        <th>Créé le</th>
                        <th>Modifiée le</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tag in tags %}
                        <tr>
                            <td>{{tag.id}}</td>
                            <td>{{tag.name}}</td>
                            <td>{{tag.slug}}</td>
                            <td>{{tag.createdAt|date('d-m-Y')}}</td>
                            <td>{{tag.updatedAt|date('d-m-Y')}}</td>
                            <td>
                                <a title="Modifier"  href="{{path('admin.tag.edit', {'id': tag.id})}}" class="text-secondary m-2"><i class="fa-solid fa-pencil"></i></a>
                                <a onclick="event.preventDefault(); return confirm('Attention!! Supprimer cette catégorie revient à supprimer tous les articles qui lui sont associés. Continuer ?') && document.querySelector('#form_delete_category_{{category.id}}').submit();" title="Supprimer" href="#" class="text-danger m-2"><i class="fa-solid fa-trash-can"></i></a>
                                <form method="POST" id="form_delete_category_{{category.id}}" action="{{path('admin.category.delete', {'id': category.id})}}">
                                    <input type="hidden" name="csrf_token" value="{{csrf_token('delete_category_'~category.id)}}">
                                    <input type="hidden" name="_method" value="DELETE">
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}
